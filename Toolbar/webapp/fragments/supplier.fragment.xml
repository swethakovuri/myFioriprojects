<core:FragmentDefinition xmlns:core="sap.ui.core" xmlns="sap.m" xmlns:f="sap.ui.layout.form">
<Table items="{default>/suppliers}" id="idTable">
<headerToolbar>
<Toolbar >
<ToolbarSpacer ></ToolbarSpacer>
<Button icon="sap-icon://filter" tooltip="filter all suppliers" press="onFilter"></Button>
</Toolbar>
</headerToolbar>
<columns>
<Column>
    <header><Text text="name"/></header>
</Column>
<Column>
    <header><Text text="sincewhen"/></header>
</Column>
<Column>
    <header><Text text="ContactPerson"/></header>
</Column>
<Column>
    <header><Text text="contactNo"/></header>
</Column>
</columns>
<items>
<ColumnListItem >
<cells>
<Text text="{default>name}"/>
<Input value="{default>city}" showValueHelp="true" valueHelpRequest="onRequest" />
<Text text="{default>sincewhen}"/>
<Text text="{default>ContactPerson}"/>
<Text text="{default>contactNo}"/>
</cells>
</ColumnListItem>
</items>
</Table>
</core:FragmentDefinition>